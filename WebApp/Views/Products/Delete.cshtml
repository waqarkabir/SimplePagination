@model Product

<h2>Delete Product</h2>
<div>
    <h4>Are you sure you want to delete this?</h4>
    <h5>@Model.Name</h5>
</div>
<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="ProductId" />
    <button type="submit">Delete</button>
    <a asp-action="Index">Cancel</a>
</form>
